generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CategoryType {
  INCOME
  EXPENSE
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  incomes         Income[]
  expenses        Expense[]
  entities        EntityMember[]
  createdEntities Entity[]        @relation("UserCreatedEntities")
  addedExpenses   EntityExpense[] @relation("UserAddedExpenses")
  categories      Category[]
}

model Income {
  id          Int       @id @default(autoincrement())
  amount      Float
  description String?
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model Expense {
  id          Int       @id @default(autoincrement())
  amount      Float
  description String?
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  entityExpense   EntityExpense? @relation(fields: [entityExpenseId], references: [id])
  entityExpenseId Int?
  sharePercentage Float?
  isPayer         Boolean      @default(false)
  isSettled       Boolean      @default(true)
}

model Category {
  id        Int          @id @default(autoincrement())
  name      String
  type      CategoryType
  user      User?        @relation(fields: [userId], references: [id])
  userId    Int?
  createdAt DateTime     @default(now())
  icon      String?
  incomes   Income[]
  expenses  Expense[]
}

model Entity {
  id          Int             @id @default(autoincrement())
  name        String
  createdAt   DateTime        @default(now())
  createdBy   User            @relation("UserCreatedEntities", fields: [createdById], references: [id])
  createdById Int
  members     EntityMember[]
  expenses    EntityExpense[]
}

model EntityMember {
  id       Int    @id @default(autoincrement())
  entity   Entity @relation(fields: [entityId], references: [id])
  entityId Int
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
  share    Decimal @db.Decimal(5, 2) @default(0)
}

model EntityExpense {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  date        DateTime @default(now())
  entity      Entity   @relation(fields: [entityId], references: [id])
  entityId    Int
  addedBy     User     @relation("UserAddedExpenses", fields: [addedById], references: [id])
  addedById   Int
  personalExpenses Expense[]
}
